@using Arq.PortalDemo.Web.Areas.App.Models.Movies
@model MovieViewModel
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="@(await GetContainerClass())">
        <div class="card mb-5 mb-xl-10">
            <div class="card-body pt-9 pb-0">
                <div class="d-flex flex-wrap flex-sm-nowrap mb-3">
                    <div class="me-7 mb-4">
                        <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                            <img src="/App/Movies/GetFile/@Model.Id" alt="image" />
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                            <div class="d-flex flex-column">
                                <div class="d-flex align-items-center mb-2">
                                    <label class="text-gray-900 fs-2 fw-bolder me-1">@Model.Title</label>
                                </div>
                                <div class="d-flex flex-wrap">
                                    <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="fs-4 fw-bolder">19 Dec, 2001</div>
                                        </div>
                                        <div class="fw-bold fs-6 text-gray-400">Released Date</div>
                                    </div>
                                    <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="fs-4 fw-bolder">897.7 million</div>
                                        </div>
                                        <div class="fw-bold fs-6 text-gray-400">Box Office</div>
                                    </div>
                                    <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                        <div class="d-flex align-items-center">
                                            <i class="flaticon-star text-warning fs-4"></i>
                                            &nbsp;
                                            <div class="fs-4 fw-bolder">8.8/10</div>
                                        </div>
                                        <div class="fw-bold fs-6 text-gray-400">IMDb RATING</div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>

                <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bolder" role="tablist">

                    <li class="nav-item mt-2">
                        <a class="nav-link text-active-primary ms-0 me-10 py-5 active"
                           href="#Overview"
                           data-bs-toggle="tab"
                           role="tab">Overview</a>
                    </li>

                    <li class="nav-item mt-2">
                        <a class="nav-link text-active-primary ms-0 me-10 py-5"
                           href="#Cast"
                           data-bs-toggle="tab"
                           role="tab">Cast</a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="tab-content">
            <div class="mb-xl-10 tab-pane show fade active" id="Overview">
                <div class="row g-xxl-12">
                    <div class="col-xxl-12">
                        <div class="card card-xxl-stretch mb-5 mb-xxl-10">
                            <div class="card-body d-flex flex-wrap justify-content-between pb-6">
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                                        <div class="d-flex flex-column">
                                            <div class="align-items-center mb-2">
                                                <div class="flex-grow-1">
                                                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                                                        <div class="d-flex flex-column">
                                                            <div class="align-items-center mb-2">
                                                                <label class="text-gray-900 fs-4 fw-bolder me-1">Descritpion</label>
                                                                <br />
                                                                <label class="text-gray-800 fs-5 me-1 text-wrap">@Model.Description</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="mb-5 mb-xl-12 tab-pane show fade" id="Cast">
                <div class="row g-xxl-12">
                    <div class="col-xxl-12">
                        <div class="card card-xxl-stretch mb-5 mb-xxl-10">
                            <div class="card-header">
                                <div class="card-title">
                                    <h3>Frodo Baggins</h3>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-wrap justify-content-between pb-6">
                                <div class="me-7 mb-4">
                                    <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                                        <img src="@Url.Content("https://upload.wikimedia.org/wikipedia/en/thumb/4/4e/Elijah_Wood_as_Frodo_Baggins.png/170px-Elijah_Wood_as_Frodo_Baggins.png")" alt="image" />
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                                        <div class="d-flex flex-column">
                                            <div class="align-items-center mb-2">
                                                <label class="text-gray-900 fs-4 fw-bolder me-1">Elijah Wood</label>
                                                <br />
                                                <label class="text-gray-900 fs-4 me-1">Biography</label>
                                                <br />
                                                <label class="text-gray-800 fs-5 me-1 text-wrap">Elijah Wood is an American actor and producer.</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row g-xxl-12">
                    <div class="col-xxl-12">
                        <div class="card card-xxl-stretch mb-5 mb-xxl-10">
                            <div class="card-header">
                                <div class="card-title">
                                    <h3>Gandalf the Gray</h3>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-wrap justify-content-between pb-6">
                                <div class="me-7 mb-4">
                                    <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                                        <img src="@Url.Content("https://static.wikia.nocookie.net/lotr/images/e/e7/Gandalf_the_Grey.jpg")" alt="image" />
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                                        <div class="d-flex flex-column">
                                            <div class="align-items-center mb-2">
                                                <label class="text-gray-900 fs-4 fw-bolder me-1">Ian McKellen</label>
                                                <br />
                                                <label class="text-gray-900 fs-4 me-1">Biography</label>
                                                <br />
                                                <label class="text-gray-800 fs-5 me-1 text-wrap">Sir Ian Murray McKellen CH CBE is an English actor.</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row g-xxl-12">
                    <div class="col-xxl-12">
                        <div class="card card-xxl-stretch mb-5 mb-xxl-10">
                            <div class="card-header">
                                <div class="card-title">
                                    <h3>Legolas</h3>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-wrap justify-content-between pb-6">
                                <div class="me-7 mb-4">
                                    <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                                        <img src="@Url.Content("https://rollingstone.uol.com.br/media/_versions/orlando_bloom_em_senhor_dos_aneis_divulgacao_new_line_widelg.jpg")" alt="image" />
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                                        <div class="d-flex flex-column">
                                            <div class="align-items-center mb-2">
                                                <label class="text-gray-900 fs-4 fw-bolder me-1">Orlando Bloom</label>
                                                <br />
                                                <label class="text-gray-900 fs-4 me-1">Biography</label>
                                                <br />
                                                <label class="text-gray-800 fs-5 me-1 text-wrap">Orlando Jonathan Blanchard Copeland Bloom is an English actor.</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row g-xxl-12">
                    <div class="col-xxl-12">
                        <div class="card card-xxl-stretch mb-5 mb-xxl-10">
                            <div class="card-header">
                                <div class="card-title">
                                    <h3>Gollum</h3>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-wrap justify-content-between pb-6">
                                <div class="me-7 mb-4">
                                    <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                                        <img src="@Url.Content("https://www.wasd.pt/wp-content/uploads/2019/03/gollum-smeagol-singing.jpg")" alt="image" />
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                                        <div class="d-flex flex-column">
                                            <div class="align-items-center mb-2">
                                                <label class="text-gray-900 fs-4 fw-bolder me-1">Andrew Clement</label>
                                                <br />
                                                <label class="text-gray-900 fs-4 me-1">Biography</label>
                                                <br />
                                                <label class="text-gray-800 fs-5 me-1 text-wrap">Andrew Clement Serkis is an English actor, director and producer.</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row g-xxl-12">
                    <div class="col-xxl-12">
                        <div class="card card-xxl-stretch mb-5 mb-xxl-10">
                            <div class="card-header">
                                <div class="card-title">
                                    <h3>Aragorn</h3>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-wrap justify-content-between pb-6">
                                <div class="me-7 mb-4">
                                    <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                                        <img src="@Url.Content("https://conteudo.imguol.com.br/c/entretenimento/dd/2018/05/17/viggo-mortensen-como-aragorn-na-trilogia-o-senhor-dos-aneis-1526603479172_v2_450x337.jpg.webp")" alt="image" />
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                                        <div class="d-flex flex-column">
                                            <div class="align-items-center mb-2">
                                                <label class="text-gray-900 fs-4 fw-bolder me-1">Viggo Mortensen</label>
                                                <br />
                                                <label class="text-gray-900 fs-4 me-1">Biography</label>
                                                <br />
                                                <label class="text-gray-800 fs-5 me-1 text-wrap">Viggo Peter Mortensen Jr. is an American actor, author, musician, photographer, poet, and painter.</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
