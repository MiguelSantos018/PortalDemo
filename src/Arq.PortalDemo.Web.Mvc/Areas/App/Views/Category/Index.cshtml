@using System.Threading.Tasks
@using Arq.PortalDemo.Web.Areas.App.Startup
@using Arq.PortalDemo.Authorization;

@{
    ViewBag.CurrentPageName = AppPageNames.Common.Categories;
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Category/Index.js" asp-append-version="false"></script>
    
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("Categories")" description="@L("CategoriesHeaderInfo")">
        @if (IsGranted(AppPermissions.Pages_Categories_Create))
        {
            <button id="CreateNewCategoriesButton" class="btn btn-primary">
                <i class="fa fa-plus"></i> @L("NewCategory")
            </button>
        }
    </abp-page-subheader>
    <div class="@(await GetContainerClass())">
        <div class="card">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">
                            <div class="mb-5 align-items-center">
                                <div class="input-group">
                                    <input type="text" id="CategoriesTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")">
                                    <button id="GetCategoriesButton" class="btn btn-primary" type="submit">
                                        <i class="flaticon-search-1" aria-label="@L("Search")"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                        <div class="col-xl-6">
                            <div>
                                <input type="text" id="TitleTableFilter" class="form-control" placeholder="@L("TitleWithThreeDot")">
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div>
                                <input type="text" id="DescriptionTableFilter" class="form-control" placeholder="@L("DescriptionWithThreeDot")">
                            </div>
                        </div>
                        <div class="col-xl-12 text-end mt-5">
                            <button id="RefreshCategoriesListButton" class="btn btn-primary float-end">
                                <i class="fa fa-sync"></i> @L("Refresh")
                            </button>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-xl-12">
                            <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                                <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")
                            </span>
                            <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                                <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="align-items-center">
                    <table id="CategoriesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>